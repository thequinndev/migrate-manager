{
  "name": "@thequinndev/migrate-manager",
  "version": "0.0.0-alpha.1",
  "description": "",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./index.d.ts",
  "module": "./dist/index.mjs",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "bin": {
    "docolate-migrate": "./bin/docolate-migrate.cjs"
  },
  "scripts": {
    "test": "vitest",
    "coverage": "vitest --coverage",
    "build": "npx rimraf dist && pnpm build:esm && pnpm build:cjs",
    "build:esm": "npx esbuild src/index.ts --bundle --platform=node --format=esm --outfile=dist/index.js",
    "build:cjs": "npx esbuild src/index.ts --bundle --platform=node --format=cjs --outfile=dist/index.cjs",
    "lint": "npx eslint",
    "lint-ts": "tsc --noEmit -p ./tsconfig.lint.json",
    "prepare": "husky",
    "docker:build": "pnpm build && docker-compose build",
    "generate:migrate:new": "pnpm run build && docker-compose run --rm migrate-manager docolate-migrate new --prefixStrategy=timestamp",
    "generate:migrate:add": "pnpm run build && docker-compose run --rm migrate-manager docolate-migrate add",
    "generate:migrate:1.0.0": "pnpm run build && docker-compose run --rm migrate-manager docolate-migrate build --prefix=20250215",
    "generate:migrate:1.1.0": "pnpm run build && docker-compose run --rm migrate-manager docolate-migrate build --prefix=20250312"
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE",
    "package.json",
    "index.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/thequinndev/migrate-manager.git"
  },
  "author": "thequinndev",
  "license": "MIT",
  "dependencies": {
    "zod": "^3.24.2",
    "zod-to-json-schema": "^3.24.5"
  },
  "keywords": [
    "database",
    "query",
    "pg",
    "sqlite",
    "migrations",
    "sql",
    "db",
    "zod"
  ],
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.0",
    "@vitest/coverage-v8": "^3.1.1",
    "esbuild": "^0.25.2",
    "eslint": "^9.24.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "rollup": "^4.39.0",
    "tslib": "^2.8.1",
    "tsup": "^8.4.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.29.0",
    "vite": "^6.2.5",
    "vitest": "^3.1.1",
    "yaml": "^2.7.1"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
